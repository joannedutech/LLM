---
export interface BreadcrumbItem {
  label: string;
  href?: string;
}

export interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav aria-label="麵包屑導覽" class="max-w-3xl mx-auto px-4 sm:px-6 pt-8 pb-2">
  <ol class="flex flex-wrap items-center gap-1 text-sm text-muted">
    {items.map((item, index) => (
      <li class="flex items-center">
        {index > 0 && <span class="mx-2 text-gray-400 dark:text-gray-600">/</span>}
        {item.href ? (
          <a href={item.href} class="hover:text-primary dark:hover:text-green-400 transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-default dark:text-slate-300 font-medium">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
